@model EmployeeTask.Data.Models.Employee
@{
    ViewData["Title"] = "Delete";
}
<h1>@ViewData["Title"]</h1>
<form method="post" class="border" asp-action="DeletePost">
    <hr>
    <input asp-for="Id" hidden/>
    <div class="mb-3">
        <div class="md-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" disabled class="form-control" />
        </div>
        <div class="md-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" disabled class="form-control" />
        </div>
        <div class="md-3">
            <label asp-for="MontlySalary"></label>
            <input asp-for="MontlySalary" disabled class="form-control" />
        </div>
        <hr>
        <button class=" btn btn-danger">Delete</button>
    </div>
</form>
<br>
<a asp-controller="Employee" asp-action="Index" class="btn btn-info">Back to employees</a>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }