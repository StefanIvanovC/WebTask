@model IEnumerable<EmployeeTask.Data.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}
@if (TempData["employee"] != null)
{
    <div class="alert alert-success" role="alert">
        <h5><b>@TempData["employee"]</b></h5>
    </div>
}
<h1>@ViewData["Title"]</h1>
<hr>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Full name
            </th>
            <th>
                Phone number
            </th>
            <th>
                Date of birth
            </th>
            <th>
                Montly salary
            </th>
            <th>
                Update tables
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    @employee.Id
                </td>
                <td>
                    @employee.FullName
                </td>
                <td>
                    @employee.PhoneNumber
                </td>
                <td>
                    @employee.DateOfBirth
                </td>
                <td>
                    @employee.MontlySalary
                </td>
                <td>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-secondary"><b>Edit</b></a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger"><b>Delete</b></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary"><b>Create NEW employee</b></a>
