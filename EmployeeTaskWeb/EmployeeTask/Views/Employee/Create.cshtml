@model EmployeeTask.Data.Models.Employee
@{
    ViewData["Title"] = "Create employee";
}
<h1>@ViewData["Title"]</h1>
<form method="post" class="border" asp-action="Create">
    <hr>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <div class="md-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="md-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="md-3">
            <label asp-for="DateOfBirth" class="control-label"></label>
            <input asp-for="DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="md-3">
            <label asp-for="MontlySalary"></label>
            <input asp-for="MontlySalary" class="form-control" />
            <span asp-validation-for="MontlySalary" class="text-danger"></span>
        </div>
        <hr>
        <button class=" btn btn-primary"><b>Create</b></button>
    </div>
</form>
<br>
<a asp-controller="Employee" asp-action="Index" class="btn btn-info"><b>Back to employees</b></a>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }