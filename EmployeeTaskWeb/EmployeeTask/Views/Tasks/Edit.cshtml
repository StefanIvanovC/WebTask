@model EmployeeTask.Data.Models.Task
@{
    ViewData["Title"] = "Edit task";
}
<h1>@ViewData["Title"]</h1>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Task</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AssignedEmployeeId" class="control-label"></label>
                    <select asp-for="AssignedEmployeeId" class="form-control" asp-items="ViewBag.AssignedEmployeeId"></select>
                    <span asp-validation-for="AssignedEmployeeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DueDate" class="control-label"></label>
                    <input asp-for="DueDate" class="form-control" type="date" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <label asp-for="IsCompleted" class="control-label"></label>
                    <input asp-for="IsCompleted" class="form-check-input" type="checkbox" id="IsCompleted" name="IsCompleted" />
                    <span asp-validation-for="IsCompleted" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
